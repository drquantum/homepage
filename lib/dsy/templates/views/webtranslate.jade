extends ../layout/base

block intro
	iframe(src="/i18next")

block js
	script.
		function getContainerWidth() {
			return $('#body .container').width()*0.97;
		}
		$('iframe').attr({
				'width': getContainerWidth(),
				'height': $(window).height() * 0.9 
			});

		$(window).on('resize', function() {
			$('iframe').attr('width',getContainerWidth());
		});

